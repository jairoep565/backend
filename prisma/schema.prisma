generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) 
  email     String   @unique
  password  String
  username  String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  games     Game[]   
}

model Game {
  id          Int      @id @default(autoincrement()) 
  title       String
  description String
  price       Float
  category    String
  platform    String
  releaseDate DateTime
  onSale      Boolean
  images      String[]
  rating      Float?      
  reviews     String[]    
  userId      Int         
  user        User    @relation(fields: [userId], references: [id]) 
}
